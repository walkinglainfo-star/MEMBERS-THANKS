      --gap:4rem;
      --distance:0px;
    }
    html,body{
      margin:0;padding:0;
      background:rgba(0,0,0,0);
      overflow:hidden;
      height:80px;width:100%;
      font-family:"Helvetica Neue",Helvetica,Arial,sans-serif;
    }
    .bar{
      height:80px; display:flex; align-items:center;
      background:rgba(0,0,0,0.65);
      position:relative; pointer-events:none;
      overflow:hidden;
      opacity:1;
      transition:opacity 2s ease;
    }
    .bar.hidden{
      opacity:0;
    }
    .ticker{
      white-space:nowrap;
      font-size:var(--fontsize); font-weight:600; color:#fff;
      text-shadow:0 0 3px rgba(255,255,255,0.3);
      animation:fadeSlideIn 1.0s ease forwards;
      opacity:0;
    }
    .inner{
      display:inline-flex; gap:var(--gap);
      will-change:transform;
      animation:scroll var(--speed) linear 1 forwards; /* run once */
    }
    .seg{ display:inline-block; padding-left:1rem }

    .sep{
      animation: blink 1.5s infinite;
      opacity:0.6;
    }

    @keyframes scroll{
      from{ transform:translateX(0) }
      to  { transform:translateX(calc(-1 * var(--distance))) }
    }
    @keyframes fadeSlideIn{
      from{ opacity:0; transform:translateY(12px) }
      to  { opacity:1; transform:translateY(0) }
    }
    @keyframes blink{
      0%,100%{ opacity:0.6 }
      50%{ opacity:1 }
    }
  </style>
