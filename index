    :root {
      --speed: 80s;       /* tweak via ?speed=70 */
      --fontsize: 28px;   /* ?fontsize=32 */
      --opacity: 1.0;     /* overall text opacity */
      --gap: 4rem;        /* ?gap=3rem */
      --distance: 0px;    /* auto-set by JS */
    }
    * { box-sizing: border-box }

    /* lock doc height so only ticker shows */
    html, body {
      margin: 0;
      padding: 0;
      background: rgba(0,0,0,0);
      overflow: hidden;
      height: 80px;   /* ticker height only */
      width: 100%;
    }
    .bar {
      position: relative;   /* no full-screen pinning */
      height: 80px;
      display: flex;
      align-items: center;
      background: rgba(0,0,0,0.65);
      pointer-events: none;
    }
    .ticker {
      position: relative;
      white-space: nowrap;
      overflow: hidden;
      font-size: var(--fontsize);
      font-weight: 600;
      color: #f9f9f9;
      text-shadow: 0 0 6px rgba(255,255,255,0.3);
      opacity: 0;
      animation: fadeSlideIn 1.2s ease forwards;
    }
    .ticker .inner {
      display: inline-flex;
      gap: var(--gap);
      will-change: transform;
      animation: scroll var(--speed) linear infinite;
    }
    .seg { display: inline-block; padding-left: 1rem }

    @keyframes scroll {
      from { transform: translateX(0) }
      to   { transform: translateX(calc(-1 * var(--distance))) }
    }
    @keyframes fadeSlideIn {
      from { opacity: 0; transform: translateY(14px) }
      to   { opacity: 1; transform: translateY(0) }
    }
    .glow {
      position: absolute; left: 0; right: 0; top: -1px; height: 2px;
      background: linear-gradient(90deg, rgba(255,255,255,0.0), rgba(255,255,255,0.8), rgba(255,255,255,0.0));
      filter: blur(1px); opacity: .8;
    }
  </style>
