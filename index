    :root{
      --speed:80s;      /* ?speed=70 faster, 95 slower */
      --fontsize:28px;  /* ?fontsize=32 */
      --gap:4rem;       /* ?gap=3rem */
      --distance:0px;   /* auto-set by JS */
    }
    /* Only an 80px strip (no full-screen) */
    html,body{
      margin:0;padding:0;
      background:rgba(0,0,0,0);
