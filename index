                                           rgba(255,255,255,0) 100%);
      filter:blur(2px);
      animation:shimmer 6s linear infinite;
    }

    .ticker{
      white-space:nowrap;
      font-size:var(--fontsize); font-weight:600; color:#fff;
      /* animated glow + slide-in */
      text-shadow:0 0 6px rgba(255,255,255,0.55);
      animation:fadeSlideIn 1.0s ease forwards, glowPulse 3.2s ease-in-out infinite;
      opacity:0;
    }
    .inner{
      display:inline-flex; gap:var(--gap);
      will-change:transform;
      animation:scroll var(--speed) linear infinite;
    }
    .seg{ display:inline-block; padding-left:1rem }

    /* Animations */
    @keyframes scroll{
      from{ transform:translateX(0) }
      to  { transform:translateX(calc(-1 * var(--distance))) }
    }
    @keyframes fadeSlideIn{
      from{ opacity:0; transform:translateY(12px) }
      to  { opacity:1; transform:translateY(0) }
    }
    @keyframes glowPulse{
      0%,100%{ text-shadow:0 0 6px rgba(255,255,255,0.55), 0 0 12px rgba(255,255,255,0.3) }
      50%    { text-shadow:0 0 10px rgba(255,255,255,0.9), 0 0 22px rgba(255,255,255,0.6) }
    }
    @keyframes shimmer{
      0%  { left:-40% }
      100%{ left:110% }
    }
