  <script>
    const segA=document.getElementById('segA');
    const inner=document.getElementById('inner');
    function measure(){
      const width=segA.getBoundingClientRect().width + parseFloat(getComputedStyle(inner).gap||0);
      document.documentElement.style.setProperty('--distance', Math.ceil(width)+'px');
    }
    window.addEventListener('load', measure);
    window.addEventListener('resize', measure);

    // when scroll animation finishes, fade out the bar
    inner.addEventListener('animationend', () => {
      const bar=document.getElementById('bar');
      bar.classList.add('hidden');
      setTimeout(()=>bar.style.display="none",2000); // hide after fade
    });
  </script>
